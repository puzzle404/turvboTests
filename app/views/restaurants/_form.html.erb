
<%= turbo_frame_tag restaurant do %>
  <%= simple_form_for restaurant, html: { class: "shadow border my-2 p-3"} do |f| %>
  <h1>New restaurant</h1>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :rating %>
      <%= f.association :user, collection: User.all, label_method: :email, value_method: :id, include_blank: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
<% end %>
